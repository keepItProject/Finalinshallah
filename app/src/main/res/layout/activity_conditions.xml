<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".ConditionsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3C4277"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/bak"
        app:title="شروط الضمان"
        app:titleMarginStart="100dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="من حق المستهلك"
        android:gravity="center"
        android:paddingRight="15dp"
        android:textSize="24dp"
        android:textColor="#3C4277"
        android:background="#e9ce73"
        >

    </TextView>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/roundcon"
    >


    <TextView
        android:layout_width="325dp"
        android:layout_height="51dp"
        android:layout_marginEnd="10dp"
        android:text="ألا تقل مدة ضمان السلع الكهربائية عن عامين."
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51">

    </TextView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="78dp"
        android:layout_height="62dp"
        android:layout_marginStart="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.578"
        app:srcCompat="@drawable/two" />

</androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/roundcon">


        <TextView
            android:layout_width="319dp"
            android:layout_height="78dp"
            android:layout_marginEnd="10dp"
            android:text="تمديد مدة ضمان المنتج بما يعادل مدة التأخير في توفير قطعة الغيار أو البدء في أعمال الصيانة أو الانتهاء منها."
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="78dp"
            android:layout_height="62dp"
            android:layout_marginStart="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.939"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.578"
            app:srcCompat="@drawable/expand" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginTop="6dp"
       android:background="@drawable/roundcon">


        <TextView
            android:layout_width="321dp"
            android:layout_height="135dp"
            android:layout_marginEnd="10dp"
            android:text="إذا طرأ عيب على السلعة مشمول بضمان المنتج, ولم يتعامل معه الوكيل بمهنية , فيكون الوكيل مسؤولًا عن تقديم ضمان المنتج لهذا العيب, وذلك لمدة عام إضافي يلي انتهاء مدة الضمان."
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView7"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </TextView>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="78dp"
            android:layout_height="62dp"
            android:layout_marginStart="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.939"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.578"
            app:srcCompat="@drawable/one" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/roundcon">


        <TextView
            android:layout_width="314dp"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:text="في حال حدوث خلل مشمول بالضمان فمن حق المستهلك الذهاب بالسلعة إلى المحل الذي اشتراها منه ويلتزم المحل بإصلاح الخلل أو بتوصيلها للوكيل لإصلاحها."
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView8"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="78dp"
            android:layout_height="62dp"
            android:layout_marginStart="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.939"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.578"
            app:srcCompat="@drawable/tools" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
